<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      .userCard {
        background-color: gray;
        color: white;
        padding: 1rem;
        display: flex;
        align-items: center;
        border-radius: 0.5rem;
        justify-content: space-between;
      }

      .userCardChild {
        display: flex;
        gap: 1rem;
      }

      .icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: rgb(232, 184, 192);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .userCardButtons {
        justify-self: left;
      }

      .userCardButtons button {
        padding: 1rem 2rem;
        border-radius: 0.5rem;
        outline: none;
        border: 1px solid rgb(90, 90, 90);
        cursor: pointer;
      }

      @media (max-width: 700px) {
        .userCard {
          flex-direction: column;
          gap: 1rem;
        }
        .userCardButtons button {
          padding: 0.5rem 1rem;
        }
      }
    </style>
  </head>

  <body>
    <div class="userCard">
      <div class="userCardChild">
        <div>
          <p class="icon"><%= user.name[0] %></p>
        </div>
        <div>
          <h2><%= user.name %></h2>
          <div class="card__handle">
            <span class="handle"><%= user.email %></span>
          </div>
        </div>
      </div>
      <div class="userCardButtons">
        <% if(user.isCertified){ %>
        <button onclick="certified()" id="certified">Remove Certified</button>
        <% } else{ %>
        <button onclick="certified()" id="certified">Make Certified</button>
        <% } %> <% if(user.isAdmin){ %>
        <button onclick="admin()" id="admin">Remove Admin</button>
        <% } else{ %>
        <button onclick="admin()" id="admin">Make Admin</button>
        <% } %>
      </div>
    </div>
  </body>

  <script>
    var userId = '<%=user._id%>';
    function certified() {
      const certifiedButton = document.querySelector('#certified');
      if (certifiedButton.innerText === 'Make Certified') {
        fetch(`/certified/${userId}/true`, {
          method: 'POST',
        }).then((res) => {
          console.log(res);
        });
        certifiedButton.innerText = 'Remove Certified';
      } else {
        fetch(`/certified/${userId}/false`, {
          method: 'POST',
        }).then((res) => {
          console.log(res);
        });
        certifiedButton.innerText = 'Make Certified';
      }
    }
    function admin() {
      const adminButton = document.querySelector('#admin');
      if (adminButton.innerText === 'Make Admin') {
        fetch(`/admin/${userId}/true`, {
          method: 'POST',
        }).then((res) => {
          console.log(res);
        });
        adminButton.innerText = 'Remove Admin';
      } else {
        fetch(`/admin/${userId}/false`, {
          method: 'POST',
        }).then((res) => {
          console.log(res);
        });
        adminButton.innerText = 'Make Admin';
      }
    }
  </script>
</html>
