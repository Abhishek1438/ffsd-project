<body>
  <%- include('navbar',{user}); %>

    <main>
      <header>
        <div class="header-class">
        <h1>Search Properties</h1>
        <p>6900 properties available to <%= property.type %>
        </p>

        <div class="search-bar">
          <input type="text" name="" id=""><a href=""><button><i class="fa-solid fa-magnifying-glass"></i></button></a>
        </div>

        <div class="search-bar-extended">
          <input type="text" placeholder="Search..."><a href=""><button>View Properties</button></a>
        </div>

        </div>
      </header>

      <div class="filters">
        <h3>Filters:</h3>
        <select name="beds" id="">
          <option value="1bed">1 Bedroom</option>
          <option value="2bed">2 Bedrooms</option>
          <option value="3bed">3 Bedrooms</option>
          <option value="4bed">4 Bedroom</option>
        </select>
        <select name="property-type" id="">
          <option value="flat">Flat</option>
          <option value="Vila">Villa</option>
        </select>

        <select name="orderBy" id="">
          <option value="newest">newest</option>
          <option value="price">Price :Low to high</option>
          <option value="price">Price :high to low</option>
        </select>

        <select name="cetification" id="">
          <option value="all">All properties</option>
          <option value="certified">Certified only</option>
        </select>
        
        <a href=""><button>+Add Filters</button></a>
      </div>

      <div class="filters-minimized">
        <h3>Filters:</h3>
        
        <div>
          <select name="beds" id="">
            <option value="1bed">1 Bedroom</option>
            <option value="2bed">2 Bedrooms</option>
            <option value="3bed">3 Bedrooms</option>
            <option value="4bed">4 Bedroom</option>
          </select>
          <select name="property-type" id="">
            <option value="flat">Flat</option>
            <option value="Vila">Villa</option>
          </select>
        </div>

        <div>
          <select name="orderBy" id="">
            <option value="newest">newest</option>
            <option value="price">Price :Low to high</option>
            <option value="price">Price :high to low</option>
          </select>
  
          <select name="cetification" id="">
            <option value="all">All properties</option>
            <option value="certified">Certified only</option>
          </select>
        </div>

        <a href=""><button>+Add Filters</button></a>
        
        
      </div>

      <section>
        <div class="property-listings">
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
          <%- include('propertyCard',); %>
        </div>

      </section>
    </main>
      <hr>
    <%- include('footer',); %>

      <script src="/js/properties.js"></script>
